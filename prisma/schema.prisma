generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  goals     Goal[]
}

model Goal {
  id     String @id @default(uuid())
  title  String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
